<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp">
        <TextView
            android:textColor="#06000E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa tài khoản"
            android:textSize="40sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background">

        <EditText
            android:id="@+id/edt_tentk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_account_circle"
            android:drawablePadding="10dp"
            android:hint="Tên tài khoản"
            android:padding="20dp"
            android:textColorHint="#06000E" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_drafts"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:padding="20dp"
            android:textColorHint="#06000E" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="Mật khẩu"
            android:padding="20dp"
            android:textColorHint="#06000E" />
        <EditText
            android:id="@+id/edt_sdt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_local_phone"
            android:drawablePadding="10dp"
            android:hint="SĐT"
            android:padding="20dp"
            android:textColorHint="#06000E" />
        <EditText
            android:id="@+id/edt_diachi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="10dp"
            android:hint="Địa chỉ"
            android:padding="20dp"
            android:textColorHint="#06000E" />

        <Button
            android:id="@+id/btn_chinhsuatk"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/buttton"
            android:layout_marginLeft="50dp"
            android:text="Cập nhật"
            android:textColor="#fff" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>