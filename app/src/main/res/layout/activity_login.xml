<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".Login">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
       android:layout_marginLeft="100dp"
        android:src="@drawable/cup" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="200dp">
        <TextView
            android:textColor="#06000E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wecome to Sport"
            android:textSize="40sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="260dp"
        android:background="@color/cardview_light_background">
        <EditText
            android:id="@+id/edt_tentk"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_account_circle"
            android:drawablePadding="10dp"
            android:hint="Tên tài khoản"
            android:padding="20dp"
            android:textColorHint="#06000E" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edt_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edit"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="Mật khẩu"
            android:padding="20dp"
            android:textColorHint="#06000E" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu ?"
            android:textColor="#06000E"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="right"
            android:layout_marginTop="200dp"
            android:textSize="15dp"
            android:layout_marginRight="60dp" />
        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/buttton"
            android:layout_marginLeft="50dp"
            android:text="Đăng nhập"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btn_dangki"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/buttton"
            android:layout_marginLeft="50dp"
            android:text="Đăng kí"
            android:textColor="#fff" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>